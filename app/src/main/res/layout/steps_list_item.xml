<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <View
        android:layout_width="@dimen/vertical_line"
        android:layout_height="0dp"
        android:background="@color/colorBLue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/number_step_tv"
        app:layout_constraintRight_toRightOf="@id/number_step_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_step_tv"
        android:layout_width="@dimen/circle_size"
        android:layout_height="@dimen/circle_size"
        android:layout_marginBottom="@dimen/layout_margin_small"
        android:layout_marginLeft="@dimen/layout_margin_medium"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />


    <TextView
        android:id="@+id/step_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_padding_medium"
        app:layout_constraintLeft_toRightOf="@id/number_step_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello world" />


</android.support.constraint.ConstraintLayout>